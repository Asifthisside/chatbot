# Backend Environment Variables
# Copy this file to .env and update the values

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chatbot

# Server Port (Vercel automatically sets this, but useful for local development)
PORT=5000

# Node Environment
NODE_ENV=development

# JWT Secret (for authentication if needed)
JWT_SECRET=your-secret-key-here

# CORS Origin (comma-separated list of allowed origins)
# For local: http://localhost:3000
# For production: https://your-frontend-domain.vercel.app
CORS_ORIGIN=http://localhost:3000

